<div id="registration-container">
  <h2>Sign up</h2>

  <%= form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "well" } do |f| %>
    <%= render "devise/shared/errors" %>

    <div><%= f.label :email %>
    <%= f.email_field :email %></div>

    <div><%= f.label :password %>
    <%= f.password_field :password %></div>

    <div><%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %></div>

    <%= f.submit "Sign up", :class => "btn" %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), :class => "btn btn-primary pull-right" %>
  <% end %>
</div>
